div(class="card border-dark mb-3" style="max-width: 45rem;")
  div(class="card-header")
    - var postAuthor = postAuthors[i]
    img#postuserimage(src="/images/profile.png" height="30px" width="30px")
    a(href='/' + postAuthor)= postAuthor
    div#postdate= moment(userPost.date).fromNow()

  div(class="card-body text-dark")
    p(class="card-text") #{userPost.content}
